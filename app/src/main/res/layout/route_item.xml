<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ri_llhide_before"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/time_img1"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="6dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/rail_line" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/time_arrival"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1.5"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="4:30 PM"
                android:textAlignment="viewStart"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="6.5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/time_img2"
                    android:layout_width="37dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|center_horizontal"
                    android:adjustViewBounds="true"
                    android:alpha="1"
                    android:background="@drawable/circle_black"
                    android:cropToPadding="true"
                    android:scaleType="center"
                    app:srcCompat="@drawable/train" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/time_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="4"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Brahmanbaria"
                            android:textAlignment="textStart"
                            android:textColor="@color/rail_sheba_green"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/time_dep"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1.5"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="4:35 PM"
                            android:textAlignment="textEnd"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:padding="0dp">

                        <TextView
                            android:id="@+id/ri_dist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="300 km"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:background="#D8D8D8" />

                        <TextView
                            android:id="@+id/ri_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 h 0 m"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ri_llhide_after1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:visibility="visible">

            <TextView
                android:id="@+id/time_hide1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1.5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.5"
                android:clipToPadding="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/time_img3"
                    android:layout_width="25dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="6dp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/rail_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ri_llhide_after2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1.5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/rail_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ri_btn_nohalt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/nohalt_bg"
                        android:drawableLeft="@drawable/keyboard_arrow_down"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:minHeight="0dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:text="27 intermediate stations"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:cornerRadius="10dp"
                        app:iconPadding="3dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ri_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eaebf4"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:listitem="@layout/no_halt_item" />



    </LinearLayout>

</androidx.cardview.widget.CardView>